{
	"name": "sokos-up-spk-mottak",
	"version": "1.0.0",
	"description": "Mikrofrontend for Utbetalingsportalen",
	"type": "module",
	"scripts": {
		"dev": "vite --mode mock",
		"dev:backend": "vite --mode backend",
		"dev:backend-q1": "vite --mode backend-q1",
		"build": "tsc && vite build",
		"biome:check": "biome check --files-ignore-unknown=true",
		"biome:fix": "biome check --write --no-errors-on-unmatched",
		"stylelint:check": "stylelint '**/*.css'",
		"stylelint:fix": "stylelint '**/*.css' --fix",
		"prepare": "husky"
	},
	"dependencies": {
		"@grafana/faro-web-sdk": "^2.1.0",
		"@navikt/aksel-icons": "^8.0.0",
		"@navikt/ds-css": "^7.39.0",
		"@navikt/ds-react": "^7.39.0",
		"axios": "^1.13.2",
		"dayjs": "^1.11.19",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"swr": "^2.3.8",
		"zod": "^4.3.5",
		"zustand": "^5.0.10"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@navikt/aksel-stylelint": "^7.39.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/node": "^25.0.8",
		"@types/react": "^19.2.8",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"autoprefixer": "^10.4.23",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"msw": "^2.12.7",
		"postcss": "^8.5.6",
		"stylelint": "^16.26.1",
		"stylelint-config-standard": "^39.0.1",
		"typescript": "^5.9.3",
		"vite": "7.3.1",
		"vite-plugin-css-injected-by-js": "^3.5.2",
		"vite-plugin-environment": "^1.1.3"
	},
	"msw": {
		"workerDirectory": [
			"public"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version"
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"@navikt/aksel-stylelint/recommended"
		],
		"rules": {
			"selector-class-pattern": null
		}
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": "biome check --write --no-errors-on-unmatched",
		"*.css": "stylelint --fix"
	},
	"engines": {
		"pnpm": ">=10.16.0",
		"node": ">=24.12.0"
	}
}
