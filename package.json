{
  "name": "sokos-up-spk-mottak",
  "version": "1.0.0",
  "description": "Mikrofrontend for Utbetalingsportalen",
  "type": "module",
  "scripts": {
    "dev": "vite --mode mock",
    "dev:backend": "vite --mode backend",
    "dev:backend-q1": "vite --mode backend-q1",
    "build": "tsc && vite build",
    "prepare": "husky",
    "lint": "eslint"
  },
  "dependencies": {
    "@grafana/faro-web-sdk": "^1.19.0",
    "@navikt/aksel-icons": "^7.36.0",
    "@navikt/ds-css": "^7.36.0",
    "@navikt/ds-react": "^7.36.0",
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "swr": "^2.3.8",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@navikt/aksel-stylelint": "^7.36.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.5",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "7.3.0",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-environment": "^1.1.3"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "rules": {
      "selector-class-pattern": null
    }
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "plugins": [
            "@trivago/prettier-plugin-sort-imports"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "pnpm": ">=10.16.0",
    "node": ">=22.21.0"
  }
}
